<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_product"
    app:startDestination="@id/productListFragment">
    <fragment
        android:id="@+id/productListFragment"
        android:name="com.nipunapps.cognent_user.fragments.ProductListFragment"
        android:label="fragment_product_list"
        tools:layout="@layout/fragment_product_list">
        <action
            android:id="@+id/goToProductDetails"
            app:destination="@+id/productDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:popExitAnim="@anim/from_left_exit" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.nipunapps.cognent_user.fragments.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details">
        <action
            android:id="@+id/goBackToRegister"
            app:destination="@id/productListFragment"
            app:exitAnim="@anim/from_right_exit"/>
    </fragment>
</navigation>